# These settings were set by the catalyst build script that automatically
# built this stage.
# Please consult /usr/share/portage/config/make.conf.example for a more
# detailed example.
CFLAGS="-fdiagnostics-color=always -march=westmere -mmmx -O4 -pipe -fomit-frame-pointer -msse -msse2 -msse3 -mssse3 -maes -msse4.2 -msse4.1" # -fPIC"
CXXFLAGS="${CFLAGS}"

# NOTE: This stage was built with the bindist Use flag enabled
PORTDIR="/usr/portage"
DISTDIR="/usr/portage/distfiles"
PKGDIR="/usr/portage/packages"

# This sets the language of build output to English.
# Please keep this setting intact when reporting bugs.
LC_MESSAGES=C

CHOST="x86_64-pc-linux-gnu"

USE="-X -bash -bash-completion -cups -doc -emacs -examples -geolocation -gnome -gnome-keyring -gtk -iconv -jack -java -javascript -kde -kontact -modules -networkmanager -ocaml -ocamlopt -openssl -seccomp -semantic-desktop -session -systemd -udisks -udisks-xemacs -xemacs -xemacs-portage abi_x86_32 abi_x86_64 consolekit dbus fam fdk lambda fortran git gpg gpm libressl lm_sensors lzma memcached memlimit offensive pax_kernel policykit pulseaudio python skey threads udev upower usb vim-syntax wifi xinerama zsh zsh-completion"

MAKEOPTS="-j6 -l2" # 1x4 + 1x2


ALSA_CARDS="hda-intel"
VIDEO_CARDS="i915 i965 intel"
INPUT_DEVICES="evdev keyboard mouse synaptics wacom"
L10N="en"

ACCEPT_KEYWORDS="amd64"

QEMU_USER_TARGETS="ppc i386 arm armeb ppc64 x86_64"
QEMU_SOFTMMU_TARGETS="ppc i386 arm ppc64 x86_64"
GRUB_PLATFORMS="pc"


FETCHCOMMAND="/usr/bin/curl -Y 20 --connect-timeout 15 -f -L --output \${DISTDIR}/\${FILE} \${URI}"
RESUMECOMMAND="/usr/bin/curl -Y 20 -C - --connect-timeout 15 -f -L --output \${DISTDIR}/\${FILE} \${URI}"

FEATURES="candy cgroup clean-logs distcc distcc-pump downgrade-backup ebuild-locks fail-clean force-mirror parallel-fetch parallel-install split-log unmerge-backup unmerge-orphans userfetch userpriv"

EMERGE_DEFAULT_OPTS="--with-bdeps=y --ask-enter-invalid --binpkg-respect-use --keep-going --verbose"

PORTAGE_NICENESS=19
DRACUT_MODULES="i18n kernel-modules fstab-sys resume udev-rules usrmount biosdevname crypt crypt-gpg lvm dm bootchart"

PORT_LOGDIR="/var/log/portage/"
PORTAGE_IONICE_COMMAND="ionice -c 3 -p \${PID}"


CPU_FLAGS_X86="mmx mmxext sse sse2 sse3 ssse3"
USE_PYTHON="3.6"

